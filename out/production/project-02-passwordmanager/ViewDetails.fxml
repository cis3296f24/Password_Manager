        <VBox alignment="TOP_LEFT" layoutX="8.0" layoutY="6.0" prefHeight="426.0" prefWidth="237.0" spacing="10">
            <Label text="Nickname:" />
            <Label fx:id="nicknameLabel" />

            <Label text="Username:" />
            <Label fx:id="usernameLabel" />

            <Label text="Password:" />
            <Label fx:id="passwordLabel" />

            <Label text="Notes:" />
            <Label fx:id="notesLabel" />
         <HBox alignment="CENTER" prefHeight="53.0" prefWidth="237.0">
            <children>
               <Button mnemonicParsing="false" text="Edit" />
            </children>
         </HBox>
        </VBox>
      <VBox layoutX="253.0" layoutY="3.0" prefHeight="426.0" prefWidth="100.0">
         <children>
            <Separator prefHeight="77.0" prefWidth="100.0" />
                <Button onAction="#copyUsername" text="Copy Username" />
            <Separator prefHeight="25.0" prefWidth="100.0" />
                <Button onAction="#copyPassword" text="Copy Password" />
         </children>
      </VBox>
    </children>
</AnchorPane>
