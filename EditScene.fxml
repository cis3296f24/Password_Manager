                <Label text="Nickname:" />
                <TextField fx:id="nicknameField" alignment="TOP_LEFT" prefHeight="26.0" prefWidth="263.0" />

                <Label text="Username:" />
                <TextField fx:id="usernameField" />

                <Label text="Password:" />
                <TextField fx:id="passwordField" />

