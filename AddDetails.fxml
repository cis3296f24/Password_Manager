<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AddDetailsController">
    <children>
        <VBox alignment="TOP_LEFT" layoutX="8.0" layoutY="15.0" prefHeight="417.0" prefWidth="514.0" spacing="10">
            <Label text="Nickname:" />
            <TextField fx:id="nicknameField" editable="false" />

            <Label text="Username:" />
            <TextField fx:id="usernameField" editable="false" />

            <Label text="Password:" />
            <TextField fx:id="passwordField" editable="false" />

            <Label text="Notes:" />
            <TextArea fx:id="notesArea" editable="false" prefHeight="46.0" prefWidth="514.0" />

            <HBox spacing="10">
                <Button onAction="#copyUsername" text="Copy Username" />
                <Button onAction="#copyPassword" text="Copy Password" />
                <Button onAction="#editDetails" text="Edit Details" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
